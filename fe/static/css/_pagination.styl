.yue .pagination-wrapper
	margin-top: 15px
	text-align: right

	@media $mobile
		text-align:center
		padding:0
		margin:0

	li
		display: inline-block

		a
			display: block
			padding: 5px 8px
			background-color: #fff
			border-radius: 3px
			border:1px solid #fff
			font-size:14px

			&:hover
				border-bottom: 3px solid #ccc

		span
			margin: 0 15px

	.on
		a
			border-bottom: 3px solid #ccc
